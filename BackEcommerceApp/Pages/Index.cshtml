@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container">
    <h3>Categorias</h3>
    <div class="row">
        <div class="col-lg-12">
            <div class="table-responsive">

                <table id="example" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th><a asp-page="/ProductosPage">@Model.Categorys.Name</a></th>
                            <th><a asp-page="/ProductosPage">@Model.Categorys.Title</a></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var category in Model.Categorys.Children)
                        {
                            <tr>
                                <td>@category.Name</td>
                                <td>@category.Title</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>